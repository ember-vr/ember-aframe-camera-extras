<a-scene>
  {{my-text
    title="Fast update"
    time=fastTime
    queryParams=fastQueryParams
    position="0 2 -2"
  }}
  {{my-text
    title="Slow update"
    time=slowTime
    queryParams=slowQueryParams
    position="0 1 -2"
  }}

  {{my-camera
    cameraQueryParams=cameraQueryParams
    intervals=(hash
      cameraMoveFast=(hash interval=10)
      cameraMoveSlow=(hash interval=1000 adjustHeight=true)
      updateCameraQueryParams=(hash interval=10 adjustHeight=true)
    )
    cameraMoveFast=(action "cameraMoveFast")
    cameraMoveSlow=(action "cameraMoveSlow")
    updateCameraQueryParams=(action "updateCameraQueryParams")
  }}
</a-scene>

